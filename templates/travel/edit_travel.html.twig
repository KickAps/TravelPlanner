{% extends 'base.html.twig' %}

{% block title %}Hello ReactController!
{% endblock %}

{% block body %}
    <div class="container-height">
        <div class="flex h-full mx-7">
            <div class="w-1/2">
                <div class="h-full overflow-y-scroll pb-2" {{ react_component('Step', {'data': steps} ) }}></div>
            </div>

            <div class="w-1/2">
                <div class="text-center">
                    <label class="uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="travel_name">
                        Nom du trajet
                    </label>
                    <input id="travel_name" name="travel_name" type="text" value="{{ name }}" class="bg-white border border-gray-500 rounded px-2 py-1 leading-tight focus:outline-none" form="steps_form" required/>
                    <input name="travel_id" type="hidden" value="{{ id }}" form="steps_form"/>
                    <button type="submit" form="steps_form" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded mx-auto my-2">Sauvegarder</button>
                </div>
                <div id="map" class="container-height w-full"></div>
            </div>
        </div>
    </div>

    <script src="{{ 'https://maps.googleapis.com/maps/api/js?key=' ~ api_key ~ '&callback=initMap&libraries=places' }}" defer></script>
{% endblock %}
