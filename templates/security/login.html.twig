{% extends 'base.html.twig' %}

{% block title %}
    Log in!
{% endblock %}

{% block body %}
    <div class="bg-white w-80 mx-auto my-10 rounded-lg lg:rounded text-center p-2 shadow">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div class="mb-8 font-bold text-2xl">
                Se connecter
            </div>

            <div class="mb-8">
                <a href="{{ path('app_connect_google')}}" title="Se connecter avec Google" class="border-2 border-gray-100 hover:border-gray-300 rounded px-4 p-5">
                    <span class="google-logo px-6 py-3"></span>
                </a>
            </div>

            <div class="relative flex my-3 items-center">
                <div class="flex-grow border-t border-gray-400"></div>
                <span class="flex-shrink mx-4 text-gray-500">
                    ou
                </span>
                <div class="flex-grow border-t border-gray-400"></div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="text-gray-700" type="submit">
                Continuer en tant qu'invit√©
            </button>
        </form>
    </div>
{% endblock %}
