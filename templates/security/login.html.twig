{% extends 'base.html.twig' %}

{% block title %}
    Log in!
{% endblock %}

{% block body %}
    <div class="bg-white w-1/2 lg:w-80 mx-auto my-10 rounded-lg lg:rounded text-center p-2 shadow">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div class="mb-10 lg:mb-8 font-bold text-4xl lg:text-2xl">
                Se connecter
            </div>

            <div class="mb-10 lg:mb-8">
                <a href="{{ path('app_connect_google')}}" title="Se connecter avec Google" class="border-2 border-gray-100 hover:border-gray-300 rounded px-6 p-7 lg:px-4 lg:p-5">
                    <span class="google-logo px-8 py-5 lg:px-6 lg:py-3"></span>
                </a>
            </div>

            <div class="relative flex mb-2 items-center">
                <div class="flex-grow border-t border-gray-400"></div>
                <span class="flex-shrink mx-4 text-2xl lg:text-base text-gray-500">
                    ou
                </span>
                <div class="flex-grow border-t border-gray-400"></div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="text-2xl lg:text-base text-gray-700 mb-2 lg:mb-1" type="submit">
                Continuer en tant qu'invit√©
            </button>
        </form>
    </div>
{% endblock %}
