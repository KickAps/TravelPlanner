{% extends 'base.html.twig' %}

{% block title %}Hello ReactController!
{% endblock %}

{% block body %}
	<div class="h-full bg-blue-100">
		<div class="mx-7 h-full">
			<div class="text-center">
				<p class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl mb-5">Trip Planner</p>
			</div>

			<div class="flex container-height ">
				<div class="w-1/2">
					<div class="h-full overflow-y-scroll" {{ react_component('Steps', {'data': data} ) }}></div>
				</div>

				<div class="w-1/2">
					<div id="map"></div>
				</div>
			</div>
		</div>
	</div>

	<script src="{{ 'https://maps.googleapis.com/maps/api/js?key=' ~ api_key ~ '&callback=initAutocomplete&libraries=places' }}" defer></script>
{% endblock %}
